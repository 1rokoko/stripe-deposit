{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/stripe/webhook.js": {
      "memory": 512,
      "maxDuration": 15
    },

    "api/metrics.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "api/healthz.js": {
      "memory": 128,
      "maxDuration": 5
    },
    "api/demo.js": {
      "memory": 256,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/healthz",
      "destination": "/api/healthz"
    },
    {
      "source": "/metrics",
      "destination": "/api/metrics"
    },
    {
      "source": "/api/demo/(.*)",
      "destination": "/api/demo"
    },
    {
      "source": "/api/stripe/webhook",
      "destination": "/api/stripe/webhook"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}
