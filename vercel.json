{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "functions": {
    "pages/api/stripe/webhook.js": {
      "memory": 512,
      "maxDuration": 15
    },
    "pages/api/admin/**/*.js": {
      "memory": 512,
      "maxDuration": 20
    },
    "pages/api/deposits/**/*.js": {
      "memory": 512,
      "maxDuration": 20
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}
