# Vercel Environment Variables Configuration
# Copy this file and set these variables in your Vercel Dashboard
# Project Settings > Environment Variables

# REQUIRED - Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# REQUIRED - API Authentication
API_AUTH_TOKEN=your_secure_api_token_here

# OPTIONAL - Server Configuration
PORT=3000
REQUEST_TIMEOUT_MS=15000
RATE_LIMIT_MAX_REQUESTS=120
RATE_LIMIT_WINDOW_MS=60000
LOG_HTTP_REQUESTS=true

# OPTIONAL - Notifications
NOTIFICATIONS_MAX_BYTES=1048576
NOTIFICATIONS_MAX_BACKUPS=3
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
ALERT_WEBHOOK_TIMEOUT_MS=5000

# OPTIONAL - Reauthorization Settings
REAUTHORIZE_AFTER_DAYS=5
REAUTH_JOB_INTERVAL_MS=43200000

# OPTIONAL - Webhook Retry Settings
WEBHOOK_RETRY_INTERVAL_MS=60000
WEBHOOK_RETRY_BATCH_SIZE=10
WEBHOOK_RETRY_MAX_ATTEMPTS=5

# NOTE: File-based settings are not used in Vercel serverless environment
# These are kept for compatibility but will use memory-based alternatives:
# DATABASE_FILE, NOTIFICATIONS_FILE, JOB_HEALTH_FILE, 
# WEBHOOK_RETRY_QUEUE_FILE, WEBHOOK_RETRY_DEAD_LETTER_FILE
